{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workbookName": {
      "type": "string",
      "defaultValue": "SampleWorkbook"
    },
    "resourceGroupName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "microsoft.insights/workbooks",
      "apiVersion": "2020-10-20-preview",
      "name": "[parameters('workbookName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "displayName": "[parameters('workbookName')]",
        "serializedData": "{\"version\":\"1.0\",\"items\":[]}", // Minimal empty workbook definition
        "sourceId": "[resourceId('Microsoft.Resources/resourceGroups', parameters('resourceGroupName'))]"
      }
    }
  ]
}
